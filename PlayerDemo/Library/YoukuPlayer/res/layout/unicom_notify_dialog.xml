<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/free_flow_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/unicom_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/unicom_notify_message"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginTop="@dimen/free_flow_dialog_top_margin"
        android:layout_marginLeft="@dimen/free_flow_dialog_top_margin"
        android:layout_marginRight="@dimen/free_flow_dialog_top_margin"
        android:layout_marginBottom="@dimen/free_flow_dialog_top_margin"
        android:text="联通免流量地址获取失败，继续播放将消耗套餐流量。 "
        android:textSize="@dimen/free_flow_dialog_top_text_size"
        android:textColor="#999999" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/unicom_btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/free_flow_dialog_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/unicom_btn_selector"
            android:gravity="center"
            android:text="确定退订"
            android:textColor="#737474"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#cfdce0" />

        <Button
            android:id="@+id/unicom_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/free_flow_dialog_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/unicom_btn_blue"
            android:gravity="center"
            android:text="返回"
            android:textColor="#249BD6"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>